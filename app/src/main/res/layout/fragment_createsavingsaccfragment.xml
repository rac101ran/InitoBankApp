<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Createsavingsaccfragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight = "10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="#c0c0c0">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal Details"
                    android:textAlignment="center"
                    android:id="@+id/tvpersonalDetails"
                    android:fontFamily="@font/segoe"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:hint="First Name"
                        android:id="@+id/etsavingNameid"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:hint="Last Name"
                        android:id="@+id/etsavingName2id"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:hint="Email ID"
                        android:id="@+id/etsavingEmailid"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:hint="Phone Number"
                        android:id="@+id/etsavingphoneid"
                        android:layout_marginLeft="20dp"
                        android:inputType="number"
                        android:layout_marginRight="20dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:hint="Aadhar card number"
                        android:id="@+id/etsavingAadharid"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:id="@+id/etsavingAgeid"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <EditText
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:hint="day"
                            android:maxLines="1"
                            android:maxLength="2"
                            android:inputType="number"
                            android:id="@+id/etsavingdobdid"
                            android:layout_height="match_parent"
                            />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:hint="Month"
                            android:maxLines="1"
                            android:maxLength="2"
                            android:inputType="number"
                            android:id="@+id/etsavingdobmid"
                            android:layout_height="match_parent"
                            />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:hint="Year"
                            android:maxLines="1"
                            android:maxLength="4"
                            android:inputType="number"
                            android:id="@+id/etsavingdobyid"
                            android:layout_height="match_parent"
                            />

                    </LinearLayout>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:hint="Address Line 1"
                        android:id="@+id/etsavingaddress1id"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:hint="Address Line 2"
                        android:id="@+id/etsavingaddress2id"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight = "10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="#c0c0c0">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account Details"
                    android:textAlignment="center"
                    android:id="@+id/tvaccountdetails"
                    android:fontFamily="@font/segoe"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.9"
                        android:padding="2dp"
                        android:gravity="center"
                        android:hint="Minimum Balance Rs 10000"
                        android:id="@+id/etsavingbalanceid"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:padding="2dp"
                        android:id="@+id/tvnrv"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:padding="2dp"
                        android:gravity="center"
                        android:id="@+id/tvinterestaccount"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:id="@+id/etsavingpassword1id"
                android:layout_marginLeft="20dp"
                android:hint="Password"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Re - Password"
                android:id="@+id/etsavingpassword2id"
                />
        </LinearLayout>

    </ScrollView>


        <!--        <EditText-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:hint="Minimum Rs.10000 to start"-->
        <!--            android:id="@+id/etsavingbalanceid"-->
        <!--            app:layout_constraintTop_toBottomOf="@id/etsavingaddress2id"-->
        <!--            android:layout_margin="50dp"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            />-->


    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/btsaving"
        android:text="Create Saving Account"
        />
</LinearLayout>

</layout>